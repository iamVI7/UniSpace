            <script>
                // Global variables
                let allBlogs = [];
                let filteredBlogs = [];
                let imageLoadingPromises = new Map();

                // Image optimization and loading utilities
                class ImageLoader {
                    constructor() {
                        this.cache = new Map();
                        this.loadingQueue = [];
                        this.maxConcurrentLoads = 6;
                        this.currentLoads = 0;
                    }

                    // Generate optimized image URLs based on device and connection
                    generateImageUrl(originalUrl, options = {}) {
                        if (!originalUrl || originalUrl.includes('placeholder')) {
                            return originalUrl;
                        }

                        const {
                            width = 600,
                            height = 600,
                            quality = 80,
                            format = 'webp'
                        } = options;

                        // If using a CDN service like Cloudinary, ImageKit, etc.
                        // Modify this to match your image optimization service
                        if (originalUrl.includes('cloudinary.com')) {
                            return originalUrl.replace('/upload/', `/upload/w_${width},h_${height},c_fill,f_${format},q_${quality}/`);
                        }

                        // For other services or custom implementation
                        return originalUrl;
                    }

                    // Get appropriate image size based on viewport
                    getOptimalImageSize() {
                        const width = window.innerWidth;
                        if (width <= 576) return { width: 400, height: 400 };
                        if (width <= 768) return { width: 500, height: 500 };
                        if (width <= 992) return { width: 600, height: 600 };
                        return { width: 700, height: 700 };
                    }

                    // Check connection quality for image optimization
                    getConnectionQuality() {
                        if ('connection' in navigator) {
                            const connection = navigator.connection;
                            if (connection.effectiveType === 'slow-2g' || connection.effectiveType === '2g') {
                                return 'low';
                            } else if (connection.effectiveType === '3g') {
                                return 'medium';
                            }
                        }
                        return 'high';
                    }

                    async loadImage(src, options = {}) {
                        // Check cache first
                        if (this.cache.has(src)) {
                            return this.cache.get(src);
                        }

                        return new Promise((resolve, reject) => {
                            const img = new Image();

                            img.onload = () => {
                                this.cache.set(src, img);
                                this.currentLoads--;
                                this.processQueue();
                                resolve(img);
                            };

                            img.onerror = () => {
                                this.currentLoads--;
                                this.processQueue();
                                reject(new Error(`Failed to load image: ${src}`));
                            };

                            // Add to queue if max concurrent loads reached
                            if (this.currentLoads >= this.maxConcurrentLoads) {
                                this.loadingQueue.push(() => {
                                    this.currentLoads++;
                                    img.src = src;
                                });
                            } else {
                                this.currentLoads++;
                                img.src = src;
                            }
                        });
                    }

                    processQueue() {
                        while (this.loadingQueue.length > 0 && this.currentLoads < this.maxConcurrentLoads) {
                            const loadFunction = this.loadingQueue.shift();
                            loadFunction();
                        }
                    }

                    // Preload critical images
                    preloadCriticalImages(imageUrls) {
                        const connectionQuality = this.getConnectionQuality();
                        const optimalSize = this.getOptimalImageSize();

                        // Only preload first few images on slower connections
                        const preloadCount = connectionQuality === 'low' ? 2 :
                            connectionQuality === 'medium' ? 4 : 6;

                        imageUrls.slice(0, preloadCount).forEach(url => {
                            if (url && !url.includes('placeholder')) {
                                const optimizedUrl = this.generateImageUrl(url, {
                                    ...optimalSize,
                                    quality: connectionQuality === 'low' ? 60 : 80
                                });
                                this.loadImage(optimizedUrl).catch(() => { });
                            }
                        });
                    }
                }

                const imageLoader = new ImageLoader();

                // Intersection Observer for lazy loading
                const observerOptions = {
                    root: null,
                    rootMargin: '50px',
                    threshold: 0.1
                };

                const imageObserver = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const imageCard = entry.target;
                            loadImageCard(imageCard);
                            imageObserver.unobserve(imageCard);
                        }
                    });
                }, observerOptions);

                // Enhanced image loading for cards
                async function loadImageCard(imageCard) {
                    const imageContainer = imageCard.querySelector('.image-container');
                    const placeholder = imageCard.querySelector('.image-placeholder');
                    const blogImage = imageCard.querySelector('.blog-image');
                    const spinner = imageCard.querySelector('.loading-spinner');

                    const originalSrc = blogImage.dataset.src;

                    if (!originalSrc || originalSrc.includes('placeholder')) {
                        // Handle placeholder/fallback images
                        placeholder.style.opacity = '1';
                        spinner.style.display = 'none';
                        return;
                    }

                    try {
                        spinner.style.display = 'block';

                        const optimalSize = imageLoader.getOptimalImageSize();
                        const connectionQuality = imageLoader.getConnectionQuality();
                        const quality = connectionQuality === 'low' ? 60 : 80;

                        const optimizedUrl = imageLoader.generateImageUrl(originalSrc, {
                            ...optimalSize,
                            quality
                        });

                        await imageLoader.loadImage(optimizedUrl);

                        blogImage.src = optimizedUrl;
                        blogImage.classList.add('loaded');

                        // Fade out placeholder and spinner
                        placeholder.style.opacity = '0';
                        spinner.style.display = 'none';

                    } catch (error) {
                        console.warn('Failed to load image:', originalSrc);

                        // Show fallback
                        placeholder.innerHTML = '<i class="fas fa-image"></i>';
                        placeholder.style.opacity = '1';
                        spinner.style.display = 'none';
                        blogImage.classList.add('error');
                    }
                }

                // Navbar scroll effect
                const navbar = document.getElementById('navbar');
                window.addEventListener('scroll', () => {
                    if (window.scrollY > 50) {
                        navbar.classList.add('scrolled');
                    } else {
                        navbar.classList.remove('scrolled');
                    }
                });

                // Search functionality
                const searchInput = document.getElementById('searchInput');
                const searchClear = document.getElementById('searchClear');
                const searchResultsInfo = document.getElementById('searchResultsInfo');
                const resultsCount = document.getElementById('resultsCount');
                const searchTerm = document.getElementById('searchTerm');
                const noResults = document.getElementById('noResults');

                // Search input event listeners
                searchInput.addEventListener('input', handleSearch);
                searchInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape') {
                        clearSearch();
                    }
                });

                searchClear.addEventListener('click', clearSearch);

                function handleSearch() {
                    const query = searchInput.value.trim().toLowerCase();

                    // Show/hide clear button
                    if (query.length > 0) {
                        searchClear.classList.add('visible');
                    } else {
                        searchClear.classList.remove('visible');
                    }

                    // Filter blogs
                    if (query.length === 0) {
                        filteredBlogs = [...allBlogs];
                        searchResultsInfo.classList.remove('visible');
                        noResults.style.display = 'none';
                    } else {
                        filteredBlogs = allBlogs.filter(blog => {
                            const title = blog.title.toLowerCase();
                            const excerpt = (blog.excerpt || '').toLowerCase();
                            const category = (blog.category || '').toLowerCase();

                            return title.includes(query) ||
                                excerpt.includes(query) ||
                                category.includes(query);
                        });

                        // Update search results info
                        resultsCount.textContent = filteredBlogs.length;
                        searchTerm.textContent = searchInput.value.trim();
                        searchResultsInfo.classList.add('visible');

                        // Show/hide no results message
                        if (filteredBlogs.length === 0) {
                            noResults.style.display = 'block';
                        } else {
                            noResults.style.display = 'none';
                        }
                    }

                    displayBlogs(filteredBlogs);
                }

                function clearSearch() {
                    searchInput.value = '';
                    searchClear.classList.remove('visible');
                    searchResultsInfo.classList.remove('visible');
                    noResults.style.display = 'none';
                    filteredBlogs = [...allBlogs];
                    displayBlogs(filteredBlogs);
                    searchInput.focus();
                }

                function displayBlogs(blogs) {
                    const blogContainer = document.getElementById('blog-container');

                    if (!blogs || blogs.length === 0) {
                        if (searchInput.value.trim().length === 0) {
                            // Show empty state when no blogs exist
                            blogContainer.innerHTML = `
                    <div class="empty-state glass-card">
                        <i class="fas fa-book-open"></i>
                        <h3>No Blog Posts Yet</h3>
                        <p>There are currently no blog posts available. Check back later or subscribe to be notified when new content is published.</p>
                    </div>
                `;
                        } else {
                            // Clear container when search has no results (no results message is shown separately)
                            blogContainer.innerHTML = '';
                        }
                        return;
                    }

                    blogContainer.innerHTML = '';

                    // Extract image URLs for preloading
                    const imageUrls = blogs.map(blog => blog.imageUrl).filter(url => url && !url.includes('placeholder'));
                    imageLoader.preloadCriticalImages(imageUrls);

                    blogs.forEach((blog, index) => {
                        const imageCard = document.createElement('a');
                        imageCard.className = 'image-card glass-card';
                        imageCard.href = `/blog/${blog._id}`;
                        imageCard.style.animationDelay = `${index * 0.1}s`;

                        const imageUrl = blog.imageUrl || 'https://via.placeholder.com/600x400?text=No+Image';
                        const isPlaceholder = imageUrl.includes('placeholder') || imageUrl.includes('via.placeholder');

                        imageCard.innerHTML = `
                    <div class="image-container ${isPlaceholder ? '' : 'skeleton'}">
                        ${!isPlaceholder ? '<div class="loading-spinner"></div>' : ''}
                        <div class="image-placeholder" style="opacity: ${isPlaceholder ? '1' : '0'}">
                            <i class="fas fa-image"></i>
                        </div>
                        <img 
                            class="blog-image ${isPlaceholder ? 'loaded' : 'progressive'}" 
                            ${isPlaceholder ? `src="${imageUrl}"` : `data-src="${imageUrl}"`}
                            alt="${blog.title}" 
                            loading="lazy">
                    </div>
                    <div class="image-overlay">
                        <h3 class="image-title">${highlightSearchTerm(blog.title, searchInput.value)}</h3>
                        <p class="image-description">${highlightSearchTerm(blog.excerpt || 'No description available...', searchInput.value)}</p>
                    </div>
                `;

                        blogContainer.appendChild(imageCard);

                        // Add to intersection observer for lazy loading
                        if (!isPlaceholder) {
                            imageObserver.observe(imageCard);
                        } else {
                            // Remove skeleton class for placeholder images
                            const container = imageCard.querySelector('.image-container');
                            container.classList.remove('skeleton');
                        }
                    });
                }

                function highlightSearchTerm(text, searchTerm) {
                    if (!searchTerm || searchTerm.trim().length === 0) {
                        return text;
                    }

                    const regex = new RegExp(`(${searchTerm.trim()})`, 'gi');
                    return text.replace(regex, '<mark style="background-color: rgba(99, 102, 241, 0.2); color: var(--primary); font-weight: 600; padding: 0.1em 0.2em; border-radius: 3px;">$1</mark>');
                }

                // Performance monitoring
                function measureImageLoadingPerformance() {
                    if ('performance' in window && 'getEntriesByType' in performance) {
                        setTimeout(() => {
                            const imageEntries = performance.getEntriesByType('resource')
                                .filter(entry => entry.initiatorType === 'img');

                            const avgLoadTime = imageEntries.reduce((sum, entry) =>
                                sum + (entry.responseEnd - entry.startTime), 0) / imageEntries.length;

                            if (avgLoadTime > 2000) {
                                console.warn('Slow image loading detected:', avgLoadTime + 'ms average');
                            }
                        }, 5000);
                    }
                }

                // Handle connection changes
                function handleConnectionChange() {
                    if ('connection' in navigator) {
                        navigator.connection.addEventListener('change', () => {
                            const connectionQuality = imageLoader.getConnectionQuality();
                            console.log('Connection changed:', connectionQuality);

                            // Adjust image quality based on new connection
                            if (connectionQuality === 'low') {
                                // Consider reducing image quality for existing images
                                console.log('Switching to low quality images due to poor connection');
                            }
                        });
                    }
                }

                // Prefetch next page images on idle
                function prefetchOnIdle() {
                    if ('requestIdleCallback' in window) {
                        requestIdleCallback(() => {
                            // Prefetch images that are likely to be needed soon
                            const visibleCards = document.querySelectorAll('.image-card');
                            const lastVisibleIndex = Array.from(visibleCards).findIndex(card => {
                                const rect = card.getBoundingClientRect();
                                return rect.bottom > window.innerHeight;
                            });

                            if (lastVisibleIndex > -1 && lastVisibleIndex < visibleCards.length - 1) {
                                // Prefetch next 3 images
                                for (let i = lastVisibleIndex + 1; i < Math.min(lastVisibleIndex + 4, visibleCards.length); i++) {
                                    const card = visibleCards[i];
                                    const img = card.querySelector('.blog-image');
                                    const src = img.dataset.src;
                                    if (src && !imageLoader.cache.has(src)) {
                                        imageLoader.loadImage(src).catch(() => { });
                                    }
                                }
                            }
                        });
                    }
                }

                // Initialize everything when DOM is ready
                document.addEventListener('DOMContentLoaded', function () {
                    // Initialize connection monitoring
                    handleConnectionChange();

                    fetch('/api/blogs')
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(blogs => {
                            allBlogs = blogs || [];
                            filteredBlogs = [...allBlogs];
                            displayBlogs(filteredBlogs);

                            // Start performance monitoring
                            measureImageLoadingPerformance();

                            // Setup idle prefetching
                            setTimeout(prefetchOnIdle, 2000);
                        })
                        .catch(error => {
                            console.error('Error fetching blogs:', error);
                            document.getElementById('blog-container').innerHTML = `
                    <div class="error-message glass-card" style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: var(--primary); margin-bottom: 1.5rem;"></i>
                        <h3 style="font-size: 1.5rem; margin-bottom: 1rem; color: var(--dark);">Error Loading Content</h3>
                        <p style="color: var(--gray); max-width: 600px; margin: 0 auto 2rem;">We encountered an error while loading the blog posts. Please try refreshing the page or check back later.</p>
                        <button onclick="window.location.reload()" class="btn btn-primary">
                            <i class="fas fa-sync-alt"></i> Refresh Page
                        </button>
                    </div>
                `;
                        });
                });

                // Handle viewport changes for responsive images
                let resizeTimeout;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(() => {
                        // Reload images with new optimal sizes if viewport changed significantly
                        const currentOptimalSize = imageLoader.getOptimalImageSize();
                        // Could implement logic to reload images if size changed significantly
                    }, 250);
                });

                // Add page visibility API to pause/resume image loading
                document.addEventListener('visibilitychange', () => {
                    if (document.hidden) {
                        // Page is hidden, could pause image loading
                        console.log('Page hidden - pausing image loading');
                    } else {
                        // Page is visible again, resume image loading
                        console.log('Page visible - resuming image loading');
                        imageLoader.processQueue();
                    }
                });
            </script>
