<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %></title>
    <!-- Google Fonts and Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap');

        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #10b981;
            --dark: #0f172a;
            --light: #f8fafc;
            --gray: #64748b;
            --light-gray: #e2e8f0;
            --card-bg: rgba(255, 255, 255, 0.85);
            --glass-effect: rgba(255, 255, 255, 0.7);
            --glass-border: rgba(255, 255, 255, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --transition: all 0.25s ease-out;
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f1f5f9;
            color: var(--dark);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            overflow-x: hidden;
            position: relative;
            transition: var(--transition);
        }

        /* Reading mode styles */
        body.reading-mode {
            background: #1a1a1a !important;
            color: #e5e5e5 !important;
        }

        body.reading-mode .blog-title {
            color: #ffffff !important;
        }

        body.reading-mode .blog-excerpt {
            color: #d1d5db !important;
        }

        body.reading-mode .blog-meta {
            color: #9ca3af !important;
        }

        body.reading-mode .meta-item i {
            color: #8b5cf6 !important;
        }

        body.reading-mode .blog-content {
            color: #e5e5e5 !important;
        }

        body.reading-mode .blog-content h2,
        body.reading-mode .blog-content h3 {
            color: #ffffff !important;
        }

        body.reading-mode .blog-content p {
            color: #e5e5e5 !important;
        }

        body.reading-mode .blog-content strong {
            color: #ffffff !important;
        }

        body.reading-mode .blog-content em {
            color: #d1d5db !important;
        }

        body.reading-mode .blog-content blockquote {
            background: rgba(99, 102, 241, 0.1) !important;
            color: #d1d5db !important;
            border-left-color: #8b5cf6 !important;
        }

        /* Highlighted text in reading mode */
        body.reading-mode .blog-content mark {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.4), rgba(16, 185, 129, 0.4)) !important;
            color: #ffffff !important;
            box-shadow: 0 0 10px rgba(139, 92, 246, 0.3) !important;
        }

        body.reading-mode .content-wrapper {
            background: rgba(30, 30, 30, 0.95) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        body.reading-mode .glass-card {
            background: rgba(30, 30, 30, 0.95) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        body.reading-mode .action-btn {
            background: rgba(40, 40, 40, 0.9) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
            color: #d1d5db !important;
        }

        body.reading-mode .action-btn:hover {
            background: rgba(139, 92, 246, 0.2) !important;
            border-color: #8b5cf6 !important;
            color: #ffffff !important;
        }

        body.reading-mode .back-link {
            background: rgba(40, 40, 40, 0.9) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
            color: #d1d5db !important;
        }

        body.reading-mode .back-link:hover {
            background: rgba(139, 92, 246, 0.2) !important;
            border-color: #8b5cf6 !important;
            color: #ffffff !important;
        }

        body.reading-mode .toast {
            background: rgba(40, 40, 40, 0.95) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
            color: #ffffff !important;
        }

        /* Glassmorphism effect */
        .glass-card {
            background: var(--glass-effect);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-radius: var(--radius-lg);
            border: 1px solid var(--glass-border);
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        /* Main Container */
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 4rem 2rem;
            min-height: 100vh;
        }

        /* Blog Header */
        .blog-header {
            margin-bottom: 3rem;
        }

        .blog-meta {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
            font-size: 0.875rem;
            color: var(--gray);
            flex-wrap: wrap;
            transition: var(--transition);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-family: 'JetBrains Mono', monospace;
            font-weight: 500;
        }

        .meta-item i {
            color: var(--primary);
            font-size: 0.8rem;
            transition: var(--transition);
        }

        .blog-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            line-height: 1.1;
            color: var(--dark);
            margin-bottom: 1.5rem;
            letter-spacing: -0.025em;
            font-family: 'Space Grotesk', sans-serif;
            transition: var(--transition);
        }

        .blog-excerpt {
            font-size: 1.25rem;
            color: var(--gray);
            line-height: 1.6;
            font-weight: 400;
            margin-bottom: 2rem;
            max-width: 800px;
            transition: var(--transition);
            text-align: justify;
        }

        /* Featured Image */
        .featured-image {
            margin-bottom: 3rem;
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            position: relative;
        }

        .featured-image img {
            width: 100%;
            height: auto;
            max-height: 500px;
            object-fit: cover;
            display: block;
        }

        /* Content Wrapper */
        .content-wrapper {
            background: var(--glass-effect);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-radius: var(--radius-lg);
            padding: 4rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--glass-border);
            margin-bottom: 3rem;
            transition: var(--transition);
        }

        .blog-content {
            font-size: 1.125rem;
            line-height: 1.7;
            color: var(--dark);
            text-align: justify;
            hyphens: auto;
            -webkit-hyphens: auto;
            -moz-hyphens: auto;
        }

        .blog-content p {
            margin-bottom: 1.75rem;
            text-align: justify;
        }

        .blog-content h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin: 3rem 0 1.5rem 0;
            line-height: 1.3;
            position: relative;
            padding-left: 1.5rem;
            font-family: 'Space Grotesk', sans-serif;
            transition: var(--transition);
            text-align: left;
        }

        .blog-content h2::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0.3rem;
            width: 4px;
            height: 2rem;
            background: linear-gradient(180deg, var(--primary), var(--secondary));
            border-radius: 2px;
        }

        /* Reading mode h2 accent */
        body.reading-mode .blog-content h2::before {
            background: linear-gradient(180deg, #8b5cf6, #10d9b0) !important;
        }

        .blog-content h3 {
            font-size: 1.4rem;
            font-weight: 600;
            color: var(--dark);
            margin: 2.5rem 0 1rem 0;
            line-height: 1.3;
            font-family: 'Space Grotesk', sans-serif;
            transition: var(--transition);
            text-align: left;
        }

        .blog-content ul,
        .blog-content ol {
            margin: 1.75rem 0;
            padding-left: 2rem;
        }

        .blog-content li {
            margin-bottom: 0.75rem;
            line-height: 1.6;
            text-align: justify;
        }

        .blog-content blockquote {
            border-left: 4px solid var(--primary);
            background: rgba(99, 102, 241, 0.05);
            padding: 2rem;
            margin: 2.5rem 0;
            border-radius: 0 var(--radius-md) var(--radius-md) 0;
            font-style: italic;
            color: var(--gray);
            position: relative;
            text-align: justify;
        }

        .blog-content blockquote::before {
            content: '"';
            font-size: 4rem;
            color: var(--primary);
            position: absolute;
            top: -0.5rem;
            left: 1rem;
            opacity: 0.3;
            font-family: 'Space Grotesk', sans-serif;
        }

        /* Enhanced mark styling for better visibility */
        .blog-content mark {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.25), rgba(16, 185, 129, 0.25));
            padding: 0.2em 0.4em;
            border-radius: 0.3em;
            color: var(--dark);
            font-weight: 500;
            box-shadow: 0 2px 4px rgba(99, 102, 241, 0.1);
            transition: var(--transition);
            position: relative;
        }

        .blog-content mark::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(16, 185, 129, 0.1));
            border-radius: 0.3em;
            z-index: -1;
            transition: var(--transition);
        }

        .blog-content strong {
            font-weight: 600;
            color: var(--dark);
        }

        .blog-content em {
            font-style: italic;
            color: var(--gray);
        }

        /* Interactive Floating Actions */
        .floating-actions {
            position: fixed;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 100;
        }

        .action-btn {
            width: 52px;
            height: 52px;
            background: var(--glass-effect);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid var(--glass-border);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray);
            text-decoration: none;
            transition: var(--transition);
            box-shadow: var(--shadow);
            cursor: pointer;
        }

        .action-btn:hover {
            color: var(--primary);
            border-color: var(--primary);
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
            background: rgba(99, 102, 241, 0.1);
        }

        .action-btn i {
            font-size: 1.1rem;
        }

        /* Footer */
        .blog-footer {
            text-align: center;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--gray);
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            transition: var(--transition);
            padding: 1rem 2rem;
            border-radius: var(--radius-md);
            background: var(--glass-effect);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border: 1px solid var(--glass-border);
            box-shadow: var(--shadow-sm);
        }

        .back-link:hover {
            color: var(--primary);
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        /* Toast notification */
        .toast {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background: var(--glass-effect);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            color: var(--dark);
            padding: 1rem 1.5rem;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-md);
            border: 1px solid var(--glass-border);
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .container {
                padding: 3rem 1.5rem;
            }

            .content-wrapper {
                padding: 3rem 2rem;
            }

            .floating-actions {
                right: 1rem;
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 3rem 1rem;
            }

            .content-wrapper {
                padding: 2.5rem 1.5rem;
            }

            .blog-meta {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .blog-content {
                font-size: 1.0625rem;
            }

            .blog-content h2 {
                font-size: 1.5rem;
                margin: 2rem 0 1rem 0;
            }

            .blog-content h3 {
                font-size: 1.25rem;
            }

            .blog-content blockquote {
                padding: 1.5rem;
                margin: 2rem 0;
            }
        }

        @media (max-width: 480px) {
            .floating-actions {
                display: none;
            }

            .content-wrapper {
                padding: 2rem 1.25rem;
            }

            .blog-content {
                font-size: 1rem;
            }
        }

        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.6s ease-out forwards;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Enhanced scroll animations */
        .scroll-reveal {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        .scroll-reveal.revealed {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <div class="container">
        <header class="blog-header fade-in">
            <div class="blog-meta">
                <div class="meta-item">
                    <i class="far fa-calendar"></i>
                    <span><%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                </div>
                <div class="meta-item">
                    <i class="far fa-clock"></i>
                    <span><%= Math.ceil(blog.content.split(' ').length / 200) %> min read</span>
                </div>
            </div>
            
            <h1 class="blog-title"><%= blog.title %></h1>
            
            <% if (blog.excerpt) { %>
                <div class="blog-excerpt"><%= blog.excerpt %></div>
            <% } %>

            <% if (blog.imageUrl) { %>
                <div class="featured-image">
                    <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>" loading="lazy">
                </div>
            <% } %>
        </header>

        <div class="content-wrapper glass-card fade-in">
            <div class="blog-content" id="blogContent">
                <%- blog.content
                    .replace(/\n\n/g, '</p><p>')
                    .replace(/\n/g, '<br>')
                    .replace(/==(.*?)==/g, '<mark>$1</mark>')
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\*(.*?)\*/g, '<em>$1</em>')
                %>
            </div>
        </div>

        <footer class="blog-footer fade-in">
            <a href="/blog" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back to All Articles
            </a>
        </footer>
    </div>

    <div class="floating-actions">
        <button class="action-btn" onclick="shareArticle()" title="Share article">
            <i class="fas fa-share-alt"></i>
        </button>
        <button class="action-btn" onclick="copyLink()" title="Copy link">
            <i class="fas fa-link"></i>
        </button>
        <button class="action-btn" onclick="toggleReadingMode()" title="Toggle reading mode" id="readingModeBtn">
            <i class="fas fa-eye"></i>
        </button>
    </div>

    <div class="toast" id="toast"></div>

    <script>
        // Share article
        function shareArticle() {
            if (navigator.share) {
                navigator.share({
                    title: document.title,
                    url: window.location.href
                }).catch(err => console.log('Error sharing:', err));
            } else {
                // Fallback to Twitter share
                const url = encodeURIComponent(window.location.href);
                const title = encodeURIComponent(document.title);
                window.open(`https://twitter.com/intent/tweet?url=${url}&text=${title}`, '_blank');
            }
        }

        // Copy link to clipboard
        function copyLink() {
            navigator.clipboard.writeText(window.location.href).then(() => {
                showToast('Link copied to clipboard!');
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = window.location.href;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    showToast('Link copied to clipboard!');
                } catch (err) {
                    showToast('Failed to copy link');
                }
                document.body.removeChild(textArea);
            });
        }

        // Reading mode toggle
        let isReadingMode = false;
        function toggleReadingMode() {
            const body = document.body;
            const btn = document.getElementById('readingModeBtn');
            const icon = btn.querySelector('i');
            
            isReadingMode = !isReadingMode;
            
            if (isReadingMode) {
                body.classList.add('reading-mode');
                icon.className = 'fas fa-eye-slash';
                btn.title = 'Exit reading mode';
                showToast('Reading mode enabled');
            } else {
                body.classList.remove('reading-mode');
                icon.className = 'fas fa-eye';
                btn.title = 'Toggle reading mode';
                showToast('Reading mode disabled');
            }
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Enhanced text formatting for better readability
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation to elements
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });

            // Enhance code blocks if any
            const codeBlocks = document.querySelectorAll('code, pre');
            codeBlocks.forEach(block => {
                block.style.background = 'rgba(99, 102, 241, 0.1)';
                block.style.padding = '0.5rem';
                block.style.borderRadius = '6px';
                block.style.fontFamily = 'JetBrains Mono, monospace';
                block.style.fontSize = '0.9em';
            });

            // Enhanced scroll reveal animation
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('revealed');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });

            // Observe elements for scroll animations
            const elementsToReveal = document.querySelectorAll('.blog-content p, .blog-content h2, .blog-content h3, .blog-content blockquote, .blog-content ul, .blog-content ol');
            elementsToReveal.forEach(el => {
                el.classList.add('scroll-reveal');
                observer.observe(el);
            });

            // Add subtle hover effects to highlighted text
            const highlightedTexts = document.querySelectorAll('.blog-content mark');
            highlightedTexts.forEach(mark => {
                mark.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.05)';
                    this.style.boxShadow = '0 4px 8px rgba(99, 102, 241, 0.2)';
                });
                
                mark.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                    this.style.boxShadow = '0 2px 4px rgba(99, 102, 241, 0.1)';
                });
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Escape key to exit reading mode
            if (e.key === 'Escape' && isReadingMode) {
                toggleReadingMode();
            }
            
            // Ctrl/Cmd + K to copy link
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                copyLink();
            }
            
            // Ctrl/Cmd + D to toggle reading mode
            if ((e.ctrlKey || e.metaKey) && e.key === 'd') {
                e.preventDefault();
                toggleReadingMode();
            }
        });

        // Add smooth scrolling for internal links
        document.addEventListener('click', function(e) {
            if (e.target.tagName === 'A' && e.target.getAttribute('href').startsWith('#')) {
                e.preventDefault();
                const targetId = e.target.getAttribute('href').substring(1);
                const targetElement = document.getElementById(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }
        });
    </script>
</body>
</html>