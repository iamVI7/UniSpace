                                            <i class="fas fa-plus"></i>
                                        </div>
                                        <div class="add-image-text">Add Image</div>
                                    </div>
            </div>
        </div>

        <!-- Upload PDF Modal -->
        <div id="uploadModal" class="modal">
            <div class="modal-content upload-modal-content">
                <div class="modal-header">
                    <div class="modal-icon" style="background: rgba(99, 102, 241, 0.1); color: var(--primary);">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="modal-title">Upload PDF</h3>
                </div>
                <div class="modal-body">
                    <form id="pdfUploadForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="file-input-container">
                                <label for="pdfFile" class="file-input-label" id="pdfFileLabel">
                                    <div class="file-input-text">
                                        <i class="fas fa-cloud-upload-alt file-input-icon"></i>
                                        <div class="file-input-main-text">Upload PDF File</div>
                                        <div class="file-input-subtext">Drag & drop your file here or click to browse</div>
