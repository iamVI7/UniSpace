        </div>

        <!-- PDF List Section -->
        <div class="pdf-section">
            <h2 class="section-title"><i class="fas fa-file-pdf"></i> Document Vault</h2>

            <div class="pdf-grid">
                <% if (user.pdfs && user.pdfs.length> 0) { %>
                    <% user.pdfs.forEach(pdf=> { %>
                        <div class="pdf-card glass-card">
                            <div class="pdf-icon">
                                <i class="fas fa-file-pdf"></i>
                            </div>
                            <div class="pdf-details">
                                <h3 class="pdf-name">
                                    <%= pdf.name %>
                                </h3>
                                <p class="pdf-date">Uploaded: <%= new Date(pdf.uploadDate).toLocaleDateString() %>
