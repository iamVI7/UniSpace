    <!-- Back to Top Button -->
    <button class="back-to-top" id="backToTop">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script>
        // Back to top button functionality
        const backToTopButton = document.getElementById('backToTop');

        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopButton.classList.add('visible');
            } else {
                backToTopButton.classList.remove('visible');
            }
        });

        backToTopButton.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Delete account modal functionality
        const deleteModal = document.getElementById('deleteModal');
        const deleteAnimation = document.getElementById('deleteAnimation');

        function openDeleteModal() {
            deleteModal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            deleteModal.classList.remove('show');
            document.body.style.overflow = '';
        }

        function confirmDeleteAccount() {
            deleteModal.classList.remove('show');
            deleteAnimation.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            setTimeout(() => {
                document.getElementById('deleteForm').submit();
            }, 2000);
        }

        // Upload PDF modal functionality
        const uploadModal = document.getElementById('uploadModal');
        const pdfFileInput = document.getElementById('pdfFile');
        const pdfFileLabel = document.getElementById('pdfFileLabel');
        const pdfFileSelected = document.getElementById('pdfFileSelected');
        const pdfFileName = document.getElementById('pdfFileName');
        const pdfUploadBtn = document.getElementById('pdfUploadBtn');

        function openUploadModal() {
            uploadModal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeUploadModal() {
            uploadModal.classList.remove('show');
            document.body.style.overflow = '';
            document.getElementById('pdfUploadForm').reset();
            document.getElementById('uploadStatus').textContent = '';
            document.getElementById('uploadStatus').style.display = 'none';
            pdfFileSelected.style.display = 'none';
            pdfUploadBtn.disabled = true;
            pdfFileLabel.classList.remove('drag-over');
        }

        // Handle PDF file selection
        pdfFileInput.addEventListener('change', function(e) {
            if (this.files.length > 0) {
                const file = this.files[0];
                pdfFileName.textContent = file.name;
                pdfFileSelected.style.display = 'block';
                pdfUploadBtn.disabled = false;
            } else {
                pdfFileSelected.style.display = 'none';
                pdfUploadBtn.disabled = true;
            }
        });

        // Drag and drop for PDF upload
        pdfFileLabel.addEventListener('dragover', (e) => {
            e.preventDefault();
            pdfFileLabel.classList.add('drag-over');
        });

        pdfFileLabel.addEventListener('dragleave', () => {
            pdfFileLabel.classList.remove('drag-over');
        });

        pdfFileLabel.addEventListener('drop', (e) => {
            e.preventDefault();
            pdfFileLabel.classList.remove('drag-over');
            if (e.dataTransfer.files.length) {
                pdfFileInput.files = e.dataTransfer.files;
                const event = new Event('change');
                pdfFileInput.dispatchEvent(event);
            }
        });

        // Close modals if user clicks outside of them
        window.onclick = function (event) {
            if (event.target === deleteModal) {
                closeDeleteModal();
            }
            if (event.target === uploadModal) {
                closeUploadModal();
            }
            if (event.target === document.getElementById('uploadImageModal')) {
                closeUploadImageModal();
            }
            if (event.target === document.getElementById('deleteImageModal')) {
                closeDeleteImageModal();
            }
            if (event.target === document.getElementById('profileModal')) {
                closeProfileModal();
            }
            if (event.target === document.getElementById('deletePdfModal')) {
                closeDeletePdfModal();
            }
        };

        // Loader functionality
        window.addEventListener('load', function () {
            setTimeout(function () {
                const loader = document.getElementById('loader');
                loader.style.opacity = '0';
                setTimeout(function () {
                    loader.style.display = 'none';
                }, 700);
            }, 1500);
        });

        // PDF Upload Functionality
        document.getElementById('pdfUploadForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const fileInput = document.getElementById('pdfFile');
            const statusElement = document.getElementById('uploadStatus');

            if (fileInput.files.length === 0) {
                showStatusMessage(statusElement, 'Please select a PDF file', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('pdf', fileInput.files[0]);

            try {
                showStatusMessage(statusElement, 'Uploading PDF...', 'info');
                pdfUploadBtn.disabled = true;
                pdfUploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';

                const response = await fetch('/upload-pdf', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    showStatusMessage(statusElement, 'PDF uploaded successfully !', 'success');
                    fileInput.value = '';
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showStatusMessage(statusElement, result.message || 'PDF upload failed', 'error');
                    pdfUploadBtn.disabled = false;
                    pdfUploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Upload PDF';
                }
            } catch (error) {
                console.error('Upload error:', error);
                showStatusMessage(statusElement, 'An error occurred during upload', 'error');
                pdfUploadBtn.disabled = false;
                pdfUploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Upload PDF';
            }
        });

        // Function to show status messages
        function showStatusMessage(element, message, type) {
            element.textContent = message;
            element.style.display = 'block';
            
            if (type === 'error') {
                element.style.color = 'var(--danger)';
                element.style.backgroundColor = 'var(--danger-light)';
            } else if (type === 'success') {
                element.style.color = 'var(--secondary)';
                element.style.backgroundColor = 'rgba(16, 185, 129, 0.1)';
            } else {
                element.style.color = 'var(--dark)';
                element.style.backgroundColor = 'var(--light-gray)';
            }
        }

        // Function to open delete confirmation modal
        function openDeletePdfModal(filename, pdfName) {
            document.getElementById('pdfToDeleteName').textContent = pdfName;
            document.getElementById('deletePdfModal').classList.add('show');
            document.body.style.overflow = 'hidden';
            document.getElementById('deletePdfModal').dataset.filename = filename;
        }

        // Function to close delete modal
        function closeDeletePdfModal() {
            document.getElementById('deletePdfModal').classList.remove('show');
            document.body.style.overflow = '';
        }

        // Function to handle PDF deletion
        async function confirmDeletePdf() {
            const filename = document.getElementById('deletePdfModal').dataset.filename;
            const userId = '<%= user._id %>';

            try {
                const response = await fetch(`/delete-pdf/${userId}/${filename}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    location.reload();
                } else {
                    alert(result.message || 'Failed to delete PDF');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the PDF');
            } finally {
                closeDeletePdfModal();
            }
        }

        // Image Modal Functions
        const uploadImageModal = document.getElementById('uploadImageModal');
        const imageFileInput = document.getElementById('imageFile');
        const imageFileLabel = document.getElementById('imageFileLabel');
        const imageFileSelected = document.getElementById('imageFileSelected');
        const imageFileName = document.getElementById('imageFileName');
        const imageUploadBtn = document.getElementById('imageUploadBtn');

        function openUploadImageModal() {
            uploadImageModal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeUploadImageModal() {
            uploadImageModal.classList.remove('show');
            document.body.style.overflow = '';
            document.getElementById('imageUploadForm').reset();
            document.getElementById('imageUploadStatus').textContent = '';
            document.getElementById('imageUploadStatus').style.display = 'none';
            imageFileSelected.style.display = 'none';
            imageUploadBtn.disabled = true;
            imageFileLabel.classList.remove('drag-over');
        }

        // Handle Image file selection
        imageFileInput.addEventListener('change', function(e) {
            if (this.files.length > 0) {
                const file = this.files[0];
                imageFileName.textContent = file.name;
                imageFileSelected.style.display = 'block';
                imageUploadBtn.disabled = false;
            } else {
                imageFileSelected.style.display = 'none';
                imageUploadBtn.disabled = true;
            }
        });

        // Drag and drop for Image upload
        imageFileLabel.addEventListener('dragover', (e) => {
            e.preventDefault();
            imageFileLabel.classList.add('drag-over');
        });

        imageFileLabel.addEventListener('dragleave', () => {
            imageFileLabel.classList.remove('drag-over');
        });

        imageFileLabel.addEventListener('drop', (e) => {
            e.preventDefault();
            imageFileLabel.classList.remove('drag-over');
            if (e.dataTransfer.files.length) {
                imageFileInput.files = e.dataTransfer.files;
                const event = new Event('change');
                imageFileInput.dispatchEvent(event);
            }
        });

        function openDeleteImageModal(filename, imageName) {
            document.getElementById('imageToDeleteName').textContent = imageName;
            document.getElementById('deleteImageModal').classList.add('show');
            document.body.style.overflow = 'hidden';
            document.getElementById('deleteImageModal').dataset.filename = filename;
        }

        function closeDeleteImageModal() {
            document.getElementById('deleteImageModal').classList.remove('show');
            document.body.style.overflow = '';
        }

        async function confirmDeleteImage() {
            const filename = document.getElementById('deleteImageModal').dataset.filename;
            const userId = '<%= user._id %>';

            try {
                const response = await fetch(`/delete-image/${userId}/${filename}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    location.reload();
                } else {
                    alert(result.message || 'Failed to delete image');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the image');
            } finally {
                closeDeleteImageModal();
            }
        }

        // Image Upload Functionality
        document.getElementById('imageUploadForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const fileInput = document.getElementById('imageFile');
            const statusElement = document.getElementById('imageUploadStatus');

            if (fileInput.files.length === 0) {
                showStatusMessage(statusElement, 'Please select an image file', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('image', fileInput.files[0]);

            try {
                showStatusMessage(statusElement, 'Uploading image...', 'info');
                imageUploadBtn.disabled = true;
                imageUploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';

                const response = await fetch('/upload-image', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    showStatusMessage(statusElement, 'Image uploaded successfully !', 'success');
                    fileInput.value = '';
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showStatusMessage(statusElement, result.message || 'Image upload failed', 'error');
                    imageUploadBtn.disabled = false;
                    imageUploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Upload Image';
                }
            } catch (error) {
                console.error('Upload error:', error);
                showStatusMessage(statusElement, 'An error occurred during upload', 'error');
                imageUploadBtn.disabled = false;
                imageUploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Upload Image';
            }
        });

        // Profile Picture Modal Functions
        const profileModal = document.getElementById('profileModal');
        const profileFileInput = document.getElementById('profileFile');
        const profileFileLabel = document.getElementById('profileFileLabel');
        const profileFileSelected = document.getElementById('profileFileSelected');
        const profileFileName = document.getElementById('profileFileName');
        const uploadProfileBtn = document.getElementById('uploadProfileBtn');

        function openProfileModal() {
            profileModal.classList.add('show');
            document.body.style.overflow = 'hidden';
            profileFileInput.value = '';
            document.getElementById('profileUploadStatus').textContent = '';
            document.getElementById('profileUploadStatus').style.display = 'none';
            uploadProfileBtn.disabled = true;
            profileFileSelected.style.display = 'none';
            profileFileLabel.classList.remove('drag-over');
            
            // Reset preview to current profile picture
            const preview = document.getElementById('profilePreview');
            preview.innerHTML = `<% if(user.profilePicture) { %>
                <img src="<%= user.profilePicture.url %>?v=<%= cacheBust %>" alt="Profile Preview">
                <% } else { %>
                    <div class="user-avatar">
                        <%= user.name.charAt(0).toUpperCase() %>
                    </div>
                    <% } %>`;
        }

        function closeProfileModal() {
            profileModal.classList.remove('show');
            document.body.style.overflow = '';
        }

        // Handle profile image selection
        profileFileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;

            const preview = document.getElementById('profilePreview');
            const statusElement = document.getElementById('profileUploadStatus');

            if (!file.type.match('image.*')) {
                showStatusMessage(statusElement, 'Please select an image file (JPEG, PNG, etc.)', 'error');
                uploadProfileBtn.disabled = true;
                profileFileSelected.style.display = 'none';
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                showStatusMessage(statusElement, 'Image size should be less than 5MB', 'error');
                uploadProfileBtn.disabled = true;
                profileFileSelected.style.display = 'none';
                return;
            }

            profileFileName.textContent = file.name;
            profileFileSelected.style.display = 'block';
            uploadProfileBtn.disabled = false;
            statusElement.style.display = 'none';

            const reader = new FileReader();
            reader.onload = function (e) {
                preview.innerHTML = `<img src="${e.target.result}" alt="Profile Preview">`;
            };
            reader.readAsDataURL(file);
        });

        // Drag and drop for Profile upload
        profileFileLabel.addEventListener('dragover', (e) => {
            e.preventDefault();
            profileFileLabel.classList.add('drag-over');
        });

        profileFileLabel.addEventListener('dragleave', () => {
            profileFileLabel.classList.remove('drag-over');
        });

        profileFileLabel.addEventListener('drop', (e) => {
            e.preventDefault();
            profileFileLabel.classList.remove('drag-over');
            if (e.dataTransfer.files.length) {
                profileFileInput.files = e.dataTransfer.files;
                const event = new Event('change');
                profileFileInput.dispatchEvent(event);
            }
        });

        // Upload profile picture
        async function uploadProfilePicture() {
            const fileInput = document.getElementById('profileFile');
            const statusElement = document.getElementById('profileUploadStatus');

            if (fileInput.files.length === 0) {
                showStatusMessage(statusElement, 'Please select an image file', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('profile', fileInput.files[0]);

            try {
                showStatusMessage(statusElement, 'Updating profile picture...', 'info');
                uploadProfileBtn.disabled = true;
                uploadProfileBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';

                const response = await fetch('/upload-profile-picture', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    showStatusMessage(statusElement, 'Profile picture updated successfully !', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showStatusMessage(statusElement, result.message || 'Failed to update profile picture', 'error');
                    uploadProfileBtn.disabled = false;
                    uploadProfileBtn.innerHTML = '<i class="fas fa-check"></i> Update';
                }
            } catch (error) {
                console.error('Upload error:', error);
                showStatusMessage(statusElement, 'An error occurred during upload', 'error');
                uploadProfileBtn.disabled = false;
                uploadProfileBtn.innerHTML = '<i class="fas fa-check"></i> Update';
            }
        }
    </script>
</body>
