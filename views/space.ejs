                                    <div class="add-pdf-btn glass-card" onclick="openUploadModal()">
                                        <div class="add-pdf-icon">
                                            <i class="fas fa-plus"></i>
                                        </div>
                                        <div class="add-pdf-text">Add PDF</div>
                                    </div>
            </div>
        </div>

        <!-- Images List Section -->
        <div class="pdf-section">
            <h2 class="section-title"><i class="fas fa-image"></i> Images</h2>

            <div class="image-masonry-grid">
                <% if (user.images && user.images.length> 0) { %>
                    <% user.images.forEach(image=> { %>
                        <div class="image-card glass-card">
                            <div class="image-preview">
                                <img src="/images/<%= image.filename %>" alt="<%= image.name %>" loading="lazy">
                            </div>
                            <div class="image-details">
                                <h3 class="image-name">
                                    <%= image.name %>
                                </h3>
                                <p class="image-date">Uploaded: <%= new Date(image.uploadDate).toLocaleDateString() %>
                                </p>
                                <p class="image-size">
                                    <%= (image.size / 1024).toFixed(2) %> KB
                                </p>
                            </div>
                            <div class="image-actions">
                                <a href="/images/<%= image.filename %>" target="_blank" class="pdf-btn view-btn">
                                    <i class="fas fa-eye"></i> View
