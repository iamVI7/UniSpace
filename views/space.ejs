        </div>

        <!-- Upload Image Modal -->
        <div id="uploadImageModal" class="modal">
            <div class="modal-content upload-modal-content">
                <div class="modal-header">
                    <div class="modal-icon" style="background: rgba(99, 102, 241, 0.1); color: var(--primary);">
                        <i class="fas fa-image"></i>
                    </div>
                    <h3 class="modal-title">Upload Image</h3>
                </div>
                <div class="modal-body">
                    <form id="imageUploadForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="file-input-container">
                                <label for="imageFile" class="file-input-label" id="imageFileLabel">
                                    <div class="file-input-text">
                                        <i class="fas fa-cloud-upload-alt file-input-icon"></i>
                                        <div class="file-input-main-text">Upload Image</div>
                                        <div class="file-input-subtext">Drag & drop your image here or click to browse</div>
                                        <div class="file-input-btn">Select Image</div>
                                    </div>
                                </label>
                                <input type="file" id="imageFile" name="image" accept="image/*" class="file-input" required>
                                <div class="file-selected" id="imageFileSelected">
                                    <i class="fas fa-check-circle"></i>
                                    <span id="imageFileName">No file selected</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="upload-btn" id="imageUploadBtn" disabled>
                                <i class="fas fa-cloud-upload-alt"></i> Upload Image
