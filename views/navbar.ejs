<script>
document.addEventListener('DOMContentLoaded', function () {
    // Get the current path
    const currentPath = window.location.pathname;

    // Remove active class from all links
    const navLinks = document.querySelectorAll('.nav-links > a');
    navLinks.forEach(link => {
        link.classList.remove('active');
    });

    // Add active class to the current page link
    if (currentPath === '/' || currentPath === '') {
        document.getElementById('home-link')?.classList.add('active');
    } else {
        const pagePath = currentPath.toLowerCase();
        if (pagePath.includes('about')) {
            document.getElementById('about-link')?.classList.add('active');
        } else if (pagePath.includes('blog')) {
            document.getElementById('blog-link')?.classList.add('active');
        } else if (pagePath.includes('contact')) {
            document.getElementById('contact-link')?.classList.add('active');
        }
    }

    // Check if we're on mobile
    const isMobile = () => window.innerWidth <= 768;

    // Auth toggle and dropdown (Desktop)
    const authToggle = document.getElementById('authToggle');
    const authDropdown = document.getElementById('authDropdown');
    const authModalOverlay = document.getElementById('authModalOverlay');
    const modalClose = document.getElementById('modalClose');

    // Desktop login type toggle
    const userToggle = document.getElementById('userToggle');
    const adminToggle = document.getElementById('adminToggle');
    const userForm = document.getElementById('userForm');
    const adminForm = document.getElementById('adminForm');
    const toggleIndicator = document.getElementById('toggleIndicator');

    // Mobile login type toggle
    const userToggleMobile = document.getElementById('userToggleMobile');
    const adminToggleMobile = document.getElementById('adminToggleMobile');
    const userFormMobile = document.getElementById('userFormMobile');
    const adminFormMobile = document.getElementById('adminFormMobile');
    const toggleIndicatorMobile = document.getElementById('toggleIndicatorMobile');

    // Desktop toggle functionality
    if (userToggle && adminToggle && userForm && adminForm && toggleIndicator) {
        userToggle.onclick = function() {
            userToggle.classList.add('active');
            adminToggle.classList.remove('active');
            userForm.style.display = 'flex';
            adminForm.style.display = 'none';
            toggleIndicator.classList.remove('admin');
        };

        adminToggle.onclick = function() {
            adminToggle.classList.add('active');
            userToggle.classList.remove('active');
            adminForm.style.display = 'flex';
            userForm.style.display = 'none';
            toggleIndicator.classList.add('admin');
        };
    }

    // Mobile toggle functionality
    if (userToggleMobile && adminToggleMobile && userFormMobile && adminFormMobile && toggleIndicatorMobile) {
        userToggleMobile.onclick = function() {
            userToggleMobile.classList.add('active');
            adminToggleMobile.classList.remove('active');
            userFormMobile.style.display = 'flex';
            adminFormMobile.style.display = 'none';
            toggleIndicatorMobile.classList.remove('admin');
        };

        adminToggleMobile.onclick = function() {
            adminToggleMobile.classList.add('active');
            userToggleMobile.classList.remove('active');
            adminFormMobile.style.display = 'flex';
            userFormMobile.style.display = 'none';
            toggleIndicatorMobile.classList.add('admin');
        };
    }

    // Auth button click handler
    if (authToggle) {
        authToggle.onclick = function (event) {
            event.preventDefault();
            event.stopPropagation();

            if (isMobile()) {
                // Show modal on mobile
                authModalOverlay.classList.add('show');
                document.body.classList.add('modal-open');
                
                // Focus first input
                setTimeout(() => {
                    const firstInput = document.getElementById('user-email-mobile');
                    if (firstInput) firstInput.focus();
                }, 100);
            } else {
                // Show dropdown on desktop
                authDropdown.classList.toggle('show');
                this.classList.toggle('active');

                if (authDropdown.classList.contains('show')) {
                    const isUserMode = userToggle?.classList.contains('active');
                    const emailInput = document.getElementById(isUserMode ? 'user-email' : 'admin-email');
                    if (emailInput) {
                        setTimeout(() => emailInput.focus(), 100);
                    }
                }
            }
        };
    }

    // Modal close button
    if (modalClose) {
        modalClose.onclick = function() {
            authModalOverlay.classList.remove('show');
            document.body.classList.remove('modal-open');
        };
    }

    // Close modal when clicking overlay
    if (authModalOverlay) {
        authModalOverlay.onclick = function(event) {
            if (event.target === authModalOverlay) {
                authModalOverlay.classList.remove('show');
                document.body.classList.remove('modal-open');
            }
        };
    }

    // Mobile menu toggle functionality
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const navLinksContainer = document.querySelector('.nav-links');

    if (mobileMenuToggle && navLinksContainer) {
        mobileMenuToggle.onclick = function () {
            this.classList.toggle('active');
            navLinksContainer.classList.toggle('active');

            if (navLinksContainer.classList.contains('active')) {
                document.body.classList.add('menu-open');
            } else {
                document.body.classList.remove('menu-open');
            }
        };

        // Close menu when clicking on nav links
        const mobileNavLinks = navLinksContainer.querySelectorAll('a:not(.create-account)');
        mobileNavLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (isMobile()) {
                    mobileMenuToggle.classList.remove('active');
                    navLinksContainer.classList.remove('active');
                    document.body.classList.remove('menu-open');
                }
            });
        });
    }

    // Close dropdowns when clicking outside
    window.onclick = function (event) {
        if (!isMobile() && authToggle && authDropdown && 
            !authToggle.contains(event.target) && !authDropdown.contains(event.target)) {
            authDropdown.classList.remove('show');
            authToggle.classList.remove('active');
        }

        if (navLinksContainer && navLinksContainer.classList.contains('active') &&
            !navLinksContainer.contains(event.target) &&
            !mobileMenuToggle?.contains(event.target)) {
            mobileMenuToggle?.classList.remove('active');
            navLinksContainer.classList.remove('active');
            document.body.classList.remove('menu-open');
        }
    };

    // Enhanced navbar scroll effect
    let scrollTimeout;
    let lastScrollTop = 0;
    
    window.addEventListener('scroll', function () {
        if (!scrollTimeout) {
            scrollTimeout = setTimeout(function() {
                const navbar = document.getElementById('navbar');
                if (navbar) {
                    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                    
                    if (scrollTop > 20) {
                        navbar.classList.add('scrolled');
                    } else {
                        navbar.classList.remove('scrolled');
                    }
                    
                    lastScrollTop = scrollTop;
                }
                scrollTimeout = null;
            }, 10);
        }
    }, { passive: true });

    // Handle viewport changes and orientation
    let resizeTimeout;
    window.addEventListener('resize', function() {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(function() {
            // Close mobile menu on resize to larger screen
            if (!isMobile()) {
                if (navLinksContainer?.classList.contains('active')) {
                    navLinksContainer.classList.remove('active');
                    mobileMenuToggle?.classList.remove('active');
                    document.body.classList.remove('menu-open');
                }
                // Close modal if open
                if (authModalOverlay?.classList.contains('show')) {
                    authModalOverlay.classList.remove('show');
                    document.body.classList.remove('modal-open');
                }
            }
            
            // Close desktop dropdown
            if (authDropdown?.classList.contains('show')) {
                authDropdown.classList.remove('show');
                authToggle?.classList.remove('active');
            }
        }, 250);
    });

    // Handle orientation change
    window.addEventListener('orientationchange', function() {
        setTimeout(function() {
            if (authDropdown?.classList.contains('show')) {
                authDropdown.classList.remove('show');
                authToggle?.classList.remove('active');
            }
            
            if (authModalOverlay?.classList.contains('show')) {
                authModalOverlay.classList.remove('show');
                document.body.classList.remove('modal-open');
            }
            
            if (navLinksContainer?.classList.contains('active')) {
                navLinksContainer.classList.remove('active');
                mobileMenuToggle?.classList.remove('active');
                document.body.classList.remove('menu-open');
            }
        }, 100);
    });

    // Enhanced keyboard navigation
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            if (authDropdown?.classList.contains('show')) {
                authDropdown.classList.remove('show');
                authToggle?.classList.remove('active');
                authToggle?.focus();
            }
            
            if (authModalOverlay?.classList.contains('show')) {
                authModalOverlay.classList.remove('show');
                document.body.classList.remove('modal-open');
            }
            
            if (navLinksContainer?.classList.contains('active')) {
                navLinksContainer.classList.remove('active');
                mobileMenuToggle?.classList.remove('active');
                document.body.classList.remove('menu-open');
                mobileMenuToggle?.focus();
            }
        }
    });
});
</script>